# Database Configuration
DATABASE_URL=postgres://ahmadfadilah:postgres@localhost:5432/subbalance?sslmode=disable

# Redis Configuration
REDIS_URL=localhost:6379

# Server Configuration
PORT=8080

# Application Configuration
APP_NAME=sub-balance-system
APP_VERSION=1.0.0
APP_ENV=development

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Settlement Configuration
SETTLEMENT_INTERVAL=2s
SETTLEMENT_BATCH_SIZE=200

# Redis Configuration
REDIS_KEY_PREFIX=subbalance
REDIS_KEY_EXPIRY=30
REDIS_POOL_SIZE=50
REDIS_MIN_IDLE_CONNS=20
REDIS_MAX_RETRIES=5
REDIS_DIAL_TIMEOUT=3s
REDIS_READ_TIMEOUT=1s
REDIS_WRITE_TIMEOUT=1s

# Database Configuration
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=50
DB_CONN_MAX_LIFETIME=10m

# Performance Configuration
MAX_CONCURRENT_REQUESTS=2000
REQUEST_TIMEOUT=15s
READ_TIMEOUT=5s
WRITE_TIMEOUT=10s

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_TIMEOUT=30s

# Health Check Configuration
HEALTH_CHECK_INTERVAL=5s
HEALTH_CHECK_TIMEOUT=2s

# Data Consistency Configuration
CONSISTENCY_CHECK_INTERVAL=30s
CONSISTENCY_CHECK_TIMEOUT=10s

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=true
TRACING_ENDPOINT=http://localhost:14268/api/traces

# Security Configuration
ENABLE_CORS=true
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting Configuration
ENABLE_RATE_LIMIT=false
RATE_LIMIT_REQUESTS=5000
RATE_LIMIT_WINDOW=1m

# Development Configuration
DEBUG_MODE=true
ENABLE_PPROF=false
PPROF_PORT=6060

# Testing Configuration
ENABLE_TEST_MODE=true
TEST_ACCOUNT_PREFIX=TEST_
TEST_DATA_CLEANUP=true

# Backup Configuration
ENABLE_BACKUP=false
BACKUP_INTERVAL=1h
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups

# Alerting Configuration
ENABLE_ALERTS=false
ALERT_WEBHOOK_URL=
ALERT_EMAIL=
ALERT_SLACK_WEBHOOK=

# Feature Flags
ENABLE_REDIS_FALLBACK=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_DATA_CONSISTENCY_CHECK=true
ENABLE_AUTO_RECOVERY=true
ENABLE_GRACEFUL_SHUTDOWN=true

